<?xml version="1.0" encoding="UTF-8"?>

<tool id="krona_chart" name="Plot Krona Pie Chart" version="1.0" description="using hierarchical taxonomy data">
    <command>
    "${SOFTDIR}/bin/Perl/bin/perl" "${SOFTDIR}/tools/amplicon_senior/krona/krona_chart.pl" -i "$input" -o "$output" -n "$name"
    </command>
    <inputs>
        <param name="input" label="Input tax summary table file with rank information, Generated by Tool: Summary the representation of taxonomic groups" type="data" format="tabular"/>
        <param name="name" type="text" label="Name of the highest level."  size="15" value="root"/>
    </inputs>
    <outputs>
        <data name="output" format="html" label="Krona pie plot Result" filename="krona.pie.html"/>
    </outputs>
</tool>
